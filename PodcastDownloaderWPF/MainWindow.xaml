<Window x:Class="PodcastDownloaderWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="PodcastDownloader" Height="112" Width="360" 
        ResizeMode="NoResize" Icon="if_Download-Computer_379337.ico">
    <Grid Margin="0,0,0,0">
        <Button x:Name="DownloadButton" Content="Download" HorizontalAlignment="Left" Margin="269,10,0,0" VerticalAlignment="Top" Width="73" Click="DownloadButton_OnClick" IsEnabled="False"/>
        <ComboBox x:Name="PodcastsList" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="239" IsReadOnly="True" SelectionChanged="PodcastsList_OnSelectionChanged" />
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="20" Margin="10,49,0,0" VerticalAlignment="Top" Width="332" Grid.ColumnSpan="2" />
    </Grid>
</Window>
